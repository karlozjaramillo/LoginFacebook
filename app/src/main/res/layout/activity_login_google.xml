<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginGoogle">

    <ImageView
        android:id="@+id/googleLogo"
        android:layout_width="144dp"
        android:layout_height="43dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_google" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sign in with your Google Account"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/googleLogo" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="360dp"
        android:layout_height="324dp"
        android:layout_marginTop="20dp"
        android:background="#F3F3F4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <ImageView
            android:id="@+id/iconPersonGoogle"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:translationX="90dp"
            android:translationY="20dp"
            app:srcCompat="@drawable/person_icon" />

        <EditText
            android:id="@+id/txtEmailGoogle"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/corner_google"
            android:ems="10"
            android:hint="Enter your email"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:translationX="40dp"
            android:translationY="160dp" />

        <Button
            android:id="@+id/btnNextGoogle"
            android:layout_width="280dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/blueGoogle"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:translationX="40dp"
            android:translationY="220dp" />

        <TextView
            android:id="@+id/needHelpGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need help?"
            android:textColor="@color/blueGoogle"
            android:translationX="250dp"
            android:translationY="280dp" />
    </FrameLayout>

    <TextView
        android:id="@+id/createAccountGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Create account"
        android:textColor="@color/blueGoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text=" One Google Account for everything Google"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createAccountGoogle" />

    <ImageView
        android:id="@+id/googleProducts"
        android:layout_width="269dp"
        android:layout_height="30dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="111dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:srcCompat="@drawable/google_products" />

</androidx.constraintlayout.widget.ConstraintLayout>